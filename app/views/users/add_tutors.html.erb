<%= error_messages_for "user" %>
<%= javascript_include_tag :defaults %>

<script type="text/javascript">
function toggle() {
 var element = $('form')
 if ( element.style.display == "block") {
	element.style.display = "none"
	$('show').style.display = "block"
	$('hide').style.display = "none"
	}
 else{
	element.style.display = "block"
	$('hide').style.display = "block"
	$('show').style.display = "none"
		}	
	}
	
</script>

<%= render :partial => "tutor" %>	

<div id="edit_user">
Add Tutors 
<div id="show">
<%= link_to "show form", "javascript:toggle()" %>
</div>
<div id="hide" style = "display :none">
<%= link_to "hide form", "javascript:toggle()" %>
</div>
</div>

<div id="form">
<% form_for :user, @user do |f|%>
<fieldset>
<p><label for="login">Login: </label><%= f.text_field :login, :size => 15 %></p>
<p><label for="firstname">Firstname: </label><%= f.text_field :firstname, :size => 15 %></p>
<p><label for="lastname">Lastname: </label><%= f.text_field :lastname, :size => 15 %></p>
<p><label for="email">Email: </label><%= f.text_field :email, :size => 15 %></p>
<p><label for="password">Password: </label><%= f.password_field :password, :size => 15 %></p>
<p><label for="password_confirmation">Confirm password: </label><%= f.password_field :password_confirmation, :size => 15 %></p>
<p><label></label><%= f.hidden_field :role %></p>
<p><%= submit_tag 'submit' %></p>
</fieldset>	
<%end%>		
</div>
