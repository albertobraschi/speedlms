<div align = "center" >
	<div id = "signup_container">            
		<fieldset class = "signup" >
			<h2>
				Owner Sign Up
			</h2>
			<% unless error_messages_for('user').empty? %>                             
				<%= error_messages_for :user %>
			<% end %>
			<% form_for :user, :url => users_path do |f| %>
				<div id = "signup">
				<div class = "fieldset_left">
					<div class = "normal" >
						<label for="firstname">
							First Name:
						</label>
					</div>
					<div class = "normal" >
						<label for="lastname">
							Last Name:
						</label>
					</div>
					<div class = "normal" >
						<label for="login">
							Username:
						</label>
					</div>
					<div class = "normal" >
						<label for="email">
							Email:
						</label>
					</div>
					<div class = "normal" >
						<label for="password">
							Password:
						</label>
					</div>
					<div class = "normal" >
						<label for="password_confirmation">
							Confirm Password:
						</label>
					</div>
					<div class = "normal" >
						<label for="speedlms_subdomain">
							SpeedLMS Subdomain:
						</label>
					</div>		
					<div class = "normal" >
						<label for="organisation">
							Organisation:
						</label>
					</div>	
					<div class = "normal" >
						<label for="logo">
							Logo:
						</label>
					</div>
					<div class = "normal" >
						<label for="timezone">
							Time Zone:
						</label>
					</div>										
					<div class = "normal" >
						<label for="signup_plan_id">
							Select a Plan
						</label>
					</div>					
				</div>
				</div>
				<div id = "signup">
				<div class = "fieldset_right">
					<div class = "normal" >
						<%= f.text_field :firstname, :size => 20, :class => 'first' %>
					</div>
					<div class = "normal" >
						<%= f.text_field :lastname, :size => 20, :class => 'first' %>
					</div> 
					<div class = "normal" >
						<%= f.text_field :login, :size => 20, :class => 'first' %>
					</div>
					<div class = "normal" >
						<%= f.text_field :email, :size => 20, :class => 'first' %>
					</div>
					<div class = "normal" >
						<%= f.password_field :password, :size => 20, :class => 'first' %>
					</div>
					<div class = "normal" >
						<%= f.password_field :password_confirmation, :size => 20, :class => 'first' %>
					</div>
					<div class = "normal" >
						<span class = "bold">
							http://
						</span>
						<%= f.text_field :speedlms_subdomain, :size => 20, :class => 'first' %>
						<span class = "bold">
							.speedlms.com
						</span>
						<%#= link_to_remote 'Check Availiability', :url => {:action => 'check_subdomain_availiability'},:html => {:onclick => "javascript:subDomainValue()"} %>
					</div>
					<div class = "normal" >
						<%= f.text_field :organisation, :size => 20, :class => 'first' %>
					</div>
					<div class = "normal" >
						<%= f.file_field :logo, :size => 20, :class => 'first' %>
					</div>
					<div class = "normal" >
						<%= f.time_zone_select :timezone %>
					</div>					
					<%= f.hidden_field :role %>					
							<%= f.select :signup_plan_id, SignupPlan.find(:all).collect{|p| [p.name, p.id]}, {:include_blank => true} %>
				</div>
				</div>
				<p>
					<%= submit_tag 'Sign up' %>
				</p>  
			<% end %>
		</fieldset>
		<fieldset class = "signup">
			<h3 class = "align_center">
				<%= link_to 'Login',new_session_path(:role => @role) %>
			</h3>
		</fieldset>
	</div>              
</div>
