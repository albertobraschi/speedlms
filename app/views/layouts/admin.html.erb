<html>
  <head>
    <title>
      SpeedLMS
    </title>
    <%= stylesheet_link_tag "secure.css" , :media => "all" %>
    <% # Include TinyMCE before other JS to avoid problems -%>
		<%= javascript_include_tiny_mce_if_used %>
		<%= tiny_mce if using_tiny_mce? %>
		<%= javascript_include_tag :defaults %>
    <%= active_scaffold_includes %>
  </head>
  <body>
    <div id = "header">
    	<div class = "admin">
    		<h3>
        	<span id = "top_right" >
        		<% if @current_user and @current_user.is_admin? %>
							<%= link_to 'Pages', admin_pages_path %>									
        			<%= link_to 'Users', admin_users_path %>
							<%= link_to 'SignupPlans', admin_signup_plans_path %>				
							<%= link_to 'Logout', destroy_session_path, :method => :delete %>
						<% end %> 
        	</span>
      	</h3>
      	<h1>Welcome to SpeedLMS ADMIN CSS</h1>
      </div>     
    </div>
    <div id="main">            
      <div id="main_top">                       
      </div>
        <div id="main_content">        
          <%= yield %>               
      </div> 
      <div id="main_footer">
      </div> 
    </div>                                      
  </body>
</html>
