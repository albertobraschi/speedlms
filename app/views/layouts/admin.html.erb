<html>
  <head>
    <title>
      SpeedLMS
    </title>
    <%= stylesheet_link_tag "secure.css" , :media => "all" %>
		<%= javascript_include_tag :defaults %>
    <%= active_scaffold_includes %>
  </head>
  <body>
    <div id = "header">
    	<div class = "admin">
    		<h3>
        	<span id = "top_right" >
        		<% if @current_user and @current_user.is_admin? %>
							<%= link_to 'Pages', admin_pages_path %>									
        			<%= link_to 'Users', admin_users_path %>
							<%= link_to 'SignupPlans', admin_signup_plans_path %>				
							<%= link_to 'Logout', destroy_session_path, :method => :delete %>
						<% end %> 
        	</span>
      	</h3>
      	<h1>
      		Welcome to SpeedLMS ADMIN CSS
      	</h1>
      </div>     
    </div>
    <div id="main">            
      <div id="main_top"> 
      	<% if flash[:notice] %>
          <div id="notice">
            <%= flash[:notice] %>
          </div>
        <% end %>
        <% if flash[:error] %>
          <div id="error">
            <%= flash[:error] %>
          </div>
        <% end %>
        <% if flash[:message] %>
          <div id="message">
            <%= flash[:message] %>
          </div>
        <% end %>                      
      </div>
      <div id="main_content">        
        <%= yield %>               
      </div> 
      <div id="main_footer">
      </div> 
    </div>                                      
  </body>
</html>
