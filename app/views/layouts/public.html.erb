<html>
  <head>
    <title>
      Welcome to SpeedLMS
    </title>
		<%= stylesheet_link_tag "unsecure.css" , :media => "all" %>
		<%= javascript_include_tag :defaults %>
  </head>
  <body> 
    <div id = "header">
      <h3>
        <span id = "top_right" >
        	<%= link_to 'Home',root_path %>
        	
        	<% unless @current_user %>
        		<%= link_to 'Login',new_session_path %>
						<%= link_to 'Owner-SignUp',new_owner_path %>
					<% end %>
					
					<% if Page.find_viewable_pages %>
            <% for page in Page.find_viewable_pages %>
							<%= link_to page.title, view_pages_session_path(:id => page.id) %>
          	<% end %>        
					<% end %>
					
					<% if @current_user and @current_user.is_owner? %>
						<%= link_to 'Tutors', add_tutors_users_path %>
					<% end %>
					
					<% if @current_user %>
						<%= link_to 'My Info', edit_user_path(@current_user.id) %>
            <%= link_to 'Logout', destroy_session_path, :method => :delete %>
					<% end %>
        </span>
      </h3>
      <h1>Welcome to SpeedLMS PUBLIC CSS</h1>
    </div>
    <div id = "main">
     <div id = "main_top">
       <% if flash[:notice] %>
         <div id="notice">
           <%= flash[:notice] %>
         </div>
       <% end %>
       <% if flash[:error] %>
         <div id="error">
           <%= flash[:error] %>
         </div>
       <% end %>
       <% if flash[:message] %>
         <div id="message">
           <%= flash[:message] %>
         </div>
       <% end %>
     </div>
     <div id = "main_content">
     	 <%= yield %>        
     </div>
     <div id = "main_footer">
     </div>
   </div>
 </body>
</html>

