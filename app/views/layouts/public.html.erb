<html>
  <head>
    <title>SpeedLMS - The #1 Lesson Maker for Online Learning</title>
    <%= stylesheet_link_tag "unsecure.css" , :media => "all" %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body class = "public">  
    <div id = "header">
    	<h3>
  			<span id = "top_right" >
      		<%= link_to 'Home',root_path %>
					<% @pages.each do |page| %>
						<%= link_to page.title, view_pages_session_path(:id => page.id) %>
					<% end %>
						<%= link_to 'Login',how_to_login_path %>
						<%= link_to 'Pricing & Sign-up',signup_path %>
      	</span>
			</h3>
      <h1><%= link_to(image_tag('speedlmslogo-small.png', :border => 0 ))%></h1>
    </div>
    <div id = "main">
      <%= render :partial => '/sessions/flash_notices'%>
      <div id = "main_content">
        <%= yield %>        
      </div>   	
      <div id = "main_footer">
      </div>
    </div>
  </body>
</html>     
