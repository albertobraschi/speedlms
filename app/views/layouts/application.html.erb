<html>
  <head>
    <title>
      Welcome to SpeedLMS
    </title>
		<%= stylesheet_link_tag "secure.css" , :media => "all" %>
 		<%= javascript_include_tag :defaults %>
  </head>
  <body> 
    <div id = "header">
      <h6>
        <span id = "top_right" >
          <%= link_to 'Home',root_path %>
          <%= link_to 'Login',new_session_path(:role => @role) %>
        	<% unless @current_user %>						
						<% if @role %>
						  
  	      		<%= link_to "#{@role} Signup",new_user_path(:role => @role) %>        		
        		<% end %>
					<% else %>
						<%= link_to 'Sign out', destroy_session_path, :method => :delete %>
					<% end %> 
        </span>
      </h6>
      <h1>Welcome to SpeedLMS</h1>
    </div>
    <div id = "main">
     <div id = "main_top">
       <% if flash[:notice] %>
         <div id="notice">
           <%= flash[:notice] %>
         </div>
       <% end %>
       <% if flash[:error] %>
         <div id="error">
           <%= flash[:error] %>
         </div>
       <% end %>
       <% if flash[:message] %>
         <div id="message">
           <%= flash[:message] %>
         </div>
       <% end %>
     </div>
     <div id = "main_content">
       <%= yield %> 
       
     </div>
     <div id = "main_footer">
     </div>
   </div>
 </body>
</html>     
